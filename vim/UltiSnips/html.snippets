snippet input "Input Element" b
<div class='form-group'>
  <label for='$3'>$1</label>
  <span for='$3' class='err-msg'></span>
  <input type='${2:text}' name='$3' class='form-control'
	  value={{$3}} $4 data-required data-onblur $0>
</div>

endsnippet

snippet inputc "Input Component"
{{> input label='$1' name='$2' col='$3' $4}}$0
endsnippet

snippet select "Select Dropdown" b
<div class='form-group'>
  <label for='$2'>$1</label>
  <span for='$2' class='err-msg'></span>

	<select class="form-control" name='$2' data-required data-onblur>
		<option value="" disabled selected>Select your Organization</option>
		<option>Foo</option>
		<option>Bar</option>
	</select>
</div>
$0
endsnippet

snippet text "Textarea Element" b
<div class='form-group'>
  <label for='$3'>$1</label>
  <span for='$3' class='err-msg'></span>
  <textarea name='$3' class='form-control' $4 data-required data-onblur></textarea>
</div>

endsnippet

