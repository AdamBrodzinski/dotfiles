layout {
    tab name="Vim" focus=true hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane command="nvim" args="src"
    }
    tab name="Git" {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane command="lazygit"
    }
    tab name="Cwd" {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }
    tab name="Claude" {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        pane command="claude" start_suspended=true
    }
}
