#!/bin/bash

brew install git
brew install wget
brew install z
brew install ack
brew install tree
brew install nvm
brew install npm
brew install trash
brew install diff-so-fancy
brew install elixir
brew install rethinkdb
brew install mongodb && brew services start mongo
brew install postgres && brew services start postgresql

git clone https://github.com/syl20bnr/spacemacs ~/.emacs.d
brew tap d12frosted/emacs-plus # for macOS
brew install emacs-plus
brew linkapps emacs-plus

brew cask install graphiql
brew cask install github-desktop
brew cask install iterm2
brew cask install slack
brew cask install alfred
brew cask install atom
brew cask install brave
brew cask install google-chrome
brew cask install spotify
brew cask install karabiner
brew cask install seil
brew cask install sketch
brew cask install google-chrome-canary
brew cask install skype
brew cask install fluid
brew cask install balsamiq-mockups
brew cask install the-unarchiver
brew cask install virtualbox
brew cask install appcleaner
brew cask install libreoffice
brew cask install screenhero
brew cask install psequel
#brew cask install totalspaces
brew cask install visual-studio
echo "Run installer for visual studio. See above instructions"

brew linkapps

echo "Set default nvm with:\n  nvm alias default 4.2.0"
