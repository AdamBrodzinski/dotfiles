# update the package database
sudo pacman -Syy

# AUR
sudo pacman -S yay

# cli tools
sudo pacman -S curl
sudo pacman -S wget
sudo pacman -S less
sudo pacman -S stow
sudo pacman -S ack
sudo pacman -S fd
sudo pacman -S jq
sudo pacman -S tree
sudo pacman -S xsel
sudo pacman -S z
sudo package -S trash-cli

# programming tools
sudo pacman -S git
sudo pacman -S lazygit
sudo pacman -S lazydocker
sudo pacman -S ripgrep
sudo pacman -S neovim
yay -S asdf-vm.git

# language support
sudo pacman -S opam
# see asdf readme for erlang install on arch

# framework13 laptop (arch)
sudo pacman -S bluez bluez-utils
sudo systemctl enable bluetooth

# enable intercept plugin
# https://wiki.archlinux.org/title/Interception-tools
sudo pacman -S interception-tools interception-caps2esc
systemctl enable udevmon


# Desktop environment
sudo pacman -S flatpack

yay -S ttf-ms-fonts
flatpack install chrome
# gnome desktop
yay -S ulauncher
yay -S gnome-shell-extension-forge
yay -S gnome-shell-extension-space-bar
